include ../icon.jade

doctype html
html(lang='en')
  head
    include ../head.jade
    title=content.pageTitle
  body.page-home
    .navbar.navbar-light.bg-primary
      .navbar-brand
        +svg('marmalade-logo')
    .jumbotron.bg-inverse(style="background: url(#{content.jumbotronBg}); background-size:cover; min-height:400px;")
      h1.font-feature=content.jumbotronH1
      +icon('dots', 'fill-white')
      p.lead=content.jumbotronLead
    
    section.about
      .container.container-restrainer
        h1.text-uppercase=content.aboutH1
        p.display-1.font-feature.m-b-0=content.aboutLead
        hr
        p.text-sm-left.text-md-left=content.aboutCopy
        br
        a(href=content.aboutLinkTarget)=content.aboutLink
        br
        +icon('down-arrow-grey')
    
    section.social.bg-primary
      .container.container-restrainer
        h1.text-uppercase.p-b-1=content.socialH1
        hr
        article
          a.twitter-timeline(href='https://twitter.com/marmaladestu' data-widget-id='710084963014672384' data-tweet-limit='1' data-chrome='noheader nofooter noborders noscrollbar')
          script.
            !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
        a(href=content.socialLinkTarget)
          +icon('twitter-button')   
          span=content.socialLink
    
    section.clients.bg-accent
      .container.container-restrainer
        h1.text-uppercase.p-b-1=content.clientsH1
        a(href=content.clientsLinkTarget)
          span=content.clientsLink
        
    section.team
      .container.container-restrainer
        h1.text-uppercase.p-b-1=content.theteamH1
        hr
        .container.p-x-0
          .row
            .col-sm-5
              img.img-fluid(src='#{content.theteamMugshot}' alt='#{content.theteamName}')
            .col-sm-7.text-sm-left
              p=content.theteamName
              p=content.theteamCopy
                br
                a(href='mailto:#{content.theteamEmailLink}')=content.theteamEmail
                br
                a(href='tel:#{content.theteamPhone}')=content.theteamPhone
    
    section.services.bg-primary
      .container.container-restrainer
        h1.text-uppercase=content.servicesH1
        hr
        +svg('brief')
        p.text-md-left=content.servicesCopy
    
    section.contact
      .container.container-restrainer
        .row
          .col-sm-7
            h1.text-uppercase=content.contactH1
            hr
            p=content.contactCopy
            p
              a(href='mailto:#{content.contactEmailLink}')=content.contactEmail
            p=content.contactPhone
          .col-sm-5
            -var lnglat = content.contactLocation.split(',')
            -var mapuri = "https://maps.googleapis.com/maps/api/staticmap?center=51.4603873,-0.0698246&zoom=15&size=400x200&scale=2&maptype=roadmap&markers=color:0xF4E17B%7Cmarkers=size:mid%7C"+lnglat[0]+","+lnglat[1]+"&key=AIzaSyAGfaHukFFe0Mq0SUsfenwBMU9frvLZiyk"
            img.img-fluid(src=mapuri)
        .row
          .col-xs-12
            ul.list-inline
              li.list-inline-item
                +icon('facebook-button')
                li.list-inline-item
                  +icon('twitter-button')
                  li.list-inline-item
                    +icon('vimeo-button')
    footer.text-xs-center
      small copyright &#169; 2016 Marmalade Productions

    include ../bundle.svg
    script(src='#{meta.relativePathToRoot}/bundle.js')
