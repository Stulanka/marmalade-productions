{
  "name": "marmalade-productions",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/tableflip/marmalade-productions#readme",
  "author": "tableflip",
  "license": "AGPL-3.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tableflip/marmalade-productions.git"
  },
  "bugs": {
    "url": "https://github.com/tableflip/marmalade-productions/issues"
  },
  "config": {
    "deploy": {
      "next": "marmalade.surge.oi",
      "prod": "marmalade-productions.co.uk"
    }
  },
  "pre-commit": ["test"],
  "scripts": {
    "test": "standard",
    "start": "npm run watch",
    "build": "npm-run-all --parallel build:*",
    "watch": "npm-run-all --parallel watch:*",
    "clean": "rm -rf ./dist/*;",
    "build:static": "rsync -a public dist",
    "build:html": "node build.js",
    "build:css": "postcss --local-plugins --use postcss-import --use autoprefixer pages/main.css -o dist/bundle.css",
    "watch:html": "nodemon -w pages -e jade -x npm run build:html",
    "watch:css": "nodemon -w pages -e css -x npm run build:css",
    "watch:static": "nodemon -w public -e 'gif,png,webm,jpg' -x npm run build:static",
    "watch:serve": "browser-sync start --files 'dist/bundle.css' --files 'dist/*.html' --server dist",
    "deploy:next": "npm-run-all clean build && surge -p ./dist -d $npm_package_config_deploy_next",
    "deploy:prod": "npm-run-all clean build && surge -p ./dist -d $npm_package_config_deploy_prod"
  },
  "dependencies": {
    "autoprefixer": "^6.0.3",
    "browserify": "^11.2.0",
    "jade": "^1.11.0",
    "jadeify": "^4.4.0",
    "npm-run-all": "^1.2.11",
    "postcss": "^5.0.9",
    "postcss-cli": "^2.3.2",
    "postcss-import": "^7.1.3"
  },
  "devDependencies": {
    "pre-commit": "^1.1.2",
    "watchify": "^3.4.0",
    "browser-sync": "^2.11.1",
  }
}
